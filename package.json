{
  "name": "omnium-compass",
  "version": "1.0.0",
  "description": "Athlete's Compass - Mindfulness principles for young footballers",
  "main": "index.js",
  "scripts": {
    "dev": "hugo server -D",
    "setup-sample": "node scripts/setup-sample-data.js",
    "build": "npm run setup-sample && npm run generate-principles && hugo --minify",
    "generate-principles": "node scripts/generate-principles.js",
    "start": "hugo server",
    "clean": "rm -rf public resources",
    "test": "playwright test",
    "check": "hugo --printPathWarnings --printUnusedTemplates",
    "vercel-build": "npm run build",
    "deploy": "vercel --prod"
  },
  "keywords": ["football", "mindfulness", "youth", "pwa"],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.6.5",
  "devDependencies": {
    "@playwright/test": "^1.51.1",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "daisyui": "^5.0.9",
    "gray-matter": "^4.0.3",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.0.15"
  },
  "dependencies": {
    "@phosphor-icons/web": "^2.1.1",
    "@tailwindcss/postcss": "^4.0.15",
    "@tailwindcss/vite": "^4.0.15",
    "animate.css": "^4.1.1",
    "playwright": "^1.51.1"
  }
}
